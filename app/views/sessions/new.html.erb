<% if alert = flash[:alert] %>
  <div class="alert alert-error shadow-sm">
    <span><%= alert %></span>
  </div>
<% end %>

<% if notice = flash[:notice] %>
  <div class="alert alert-success shadow-sm">
    <span><%= notice %></span>
  </div>
<% end %>

<h1 class="text-2xl font-bold mb-6">Sign in</h1>

<%= form_with url: session_url, class: "space-y-4" do |form| %>
  <div class="form-control">
    <%= form.label :email_address, "Email address", class: "label" %>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= form.label :password, "Password", class: "label" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mt-6">
    <%= form.submit "Sign in", class: "btn btn-primary w-full sm:w-auto" %>

    <%= link_to "Forgot password?", new_password_path, class: "text-sm link link-hover text-gray-500" %>
  </div>
<% end %>
