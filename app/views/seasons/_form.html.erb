<%= form_with(model: season, class: "contents") do |form| %>
  <% if season.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(season.errors.count, "error") %> prohibited this season from being saved:</h2>

      <ul class="list-disc ml-6">
        <% season.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": season.errors[:name].none?, "border-red-400 focus:outline-red-600": season.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_year %>
    <%= form.number_field :start_year, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": season.errors[:start_year].none?, "border-red-400 focus:outline-red-600": season.errors[:start_year].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_year %>
    <%= form.number_field :end_year, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": season.errors[:end_year].none?, "border-red-400 focus:outline-red-600": season.errors[:end_year].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :studio_id %>
    <%= form.text_field :studio_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": season.errors[:studio_id].none?, "border-red-400 focus:outline-red-600": season.errors[:studio_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
