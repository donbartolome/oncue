<h1 class="text-2xl font-bold mb-6"><%= @studio.name %> - Seasons</h1>

<div class="flex justify-between items-center">
  <div>
    <%= link_to "← Back to Studio", studio_path(@studio), class: "btn btn-ghost mr-2" %>
  </div>

  <% if authenticated? %>
    <div class="flex gap-2">
      <%= link_to "New Season", new_studio_season_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<% if @seasons.any? %>
  <ul class="list bg-base-100 rounded-box shadow-md">

    <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Seasons</li>
    <% @seasons.each do |season| %>
      <li class="list-row">
        <%= render "season", season: season %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-center text-gray-500 my-8">No seasons found. Create a new season to get started.</p>
<% end %>
