<% content_for :title, @season.name %>

<h1 class="text-2xl font-bold mb-6"><%= @season.studio.name %> - <%= @season.name %></h1>

<div class="flex justify-between items-center">
  <div>
    <%= link_to "â† Back to Seasons", studio_seasons_path(@season.studio), class: "btn btn-ghost mr-2" %>
  </div>
</div>

<div class="card bg-base-100 shadow-xl mb-6">
  <div class="card-body">
    <h2 class="card-title">Season Details</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-4">
      <div>
        <p class="font-semibold">Name</p>
        <p><%= @season.name %></p>
      </div>

      <div>
        <p class="font-semibold">Year</p>
        <p><%= @season.year %></p>
      </div>
    </div>

    <div class="card-actions justify-end">
      <%= link_to "Edit", edit_season_path(@season), class: "btn btn-primary" %>
      <%= button_to "Delete", season_path(@season), method: :delete, class: "btn btn-error", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>

<!-- name of each tab group should be unique -->
<div class="tabs tabs-lift">
  <label class="tab">
    <input type="radio" name="my_tabs_4" checked="checked" />
    <!-- Heroicons: academic-cap -->
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 me-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
    </svg>
    Classes
  </label>
  <div class="tab-content bg-base-100 border-base-300 p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Classes</h2>
      <%= link_to "Add Class", "#", class: "btn btn-primary" %>
    </div>

    <div id="classes">
      <p class="text-center text-gray-500 my-8">No classes have been added to this season yet.</p>
    </div>
  </div>

  <label class="tab">
    <input type="radio" name="my_tabs_4" />
    <!-- Heroicons: user-group -->
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 me-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
    </svg>
    Dancers
  </label>
  <div class="tab-content bg-base-100 border-base-300 p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Dancers</h2>
      <%= link_to "Add Dancer", select_dancer_season_path(@season), class: "btn btn-primary" %>
    </div>

    <div id="dancers">
      <% dancers = @season.get_dancers %>
      <% if dancers.any? %>
        <ul class="list-disc pl-6">
          <% dancers.each do |dancer| %>
            <li><%= dancer.full_name %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center text-gray-500 my-8">No dancers have been added to this season yet.</p>
      <% end %>
    </div>
  </div>
</div>
