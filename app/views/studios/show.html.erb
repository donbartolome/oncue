<h1 class="text-2xl font-bold mb-6"><%= @studio.name %></h1>

<div class="flex justify-between items-center">
  <div>
    <%= link_to "Back", studios_path, class: "btn btn-ghost mr-2" %>
  </div>

  <% if authenticated? %>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_studio_path(@studio), class: "btn btn-primary" %>
      <%= button_to "Delete", @studio, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-error" %>
    </div>
  <% end %>
</div>
