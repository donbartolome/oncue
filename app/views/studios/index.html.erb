<h1 class="text-2xl font-bold mb-4">Studios</h1>

<% if authenticated? %>
  <div class="mb-4 flex justify-end">
    <%= link_to "New studio", new_studio_path, class: "btn btn-primary" %>
  </div>
<% end %>

<div id="studios" class="grid gap-4">
  <% @studios.each do |studio| %>
    <%= link_to studio_path(studio), class: "card bg-base-200 shadow-md hover:shadow-lg transition-all duration-200" do %>
      <div class="card-body p-4">
        <h2 class="card-title text-lg text-primary">
          <%= studio.name %>
        </h2>
      </div>
    <% end %>
  <% end %>
</div>
